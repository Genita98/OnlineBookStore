@model Category

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">

            <h3 class="text-primary">Delete Category</h3>
            <hr />
        </div>
        <input asp-for="Id" hidden />

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DisplayOrder">Display Order</label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>

        </div>
        <button class="btn btn-danger" width="150px">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-warning" width="150px">Back to List</a>
    </div>




</form>

